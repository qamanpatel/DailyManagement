<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DailyManagementSystem.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="DailyManagementSystem.Views.OrderView"
             x:DataType="vm:OrderViewModel">

    <UserControl.Resources>
        <vm:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,450">

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnDefinitions="Auto,*,Auto" Margin="20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Command="{Binding BackCommand}" Content="â† Back" />
                <TextBlock Text="Order Management" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                <Border Background="#37474F" Padding="10,5" CornerRadius="5" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Role:" Foreground="#B0BEC5" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="Admin" IsVisible="{Binding IsAdmin}" FontWeight="SemiBold" Foreground="#90CAF9" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="User" IsVisible="{Binding !IsAdmin}" FontWeight="SemiBold" Foreground="#81C784" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Left: Orders List & Filters -->
        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,*" Margin="20,0,10,20">
            
            <!-- Filters -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,15">
                <TextBlock Text="Filter by Client:" VerticalAlignment="Center" Foreground="#B0BEC5"/>
                <ComboBox ItemsSource="{Binding FilterClients}" 
                          SelectedItem="{Binding SelectedFilterClient}"
                          PlaceholderText="All Clients"
                          Width="250">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ClientName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Command="{Binding RefreshCommand}" Content="Refresh" />
            </StackPanel>

            <!-- DataGrid -->
            <Border Grid.Row="1" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Background="#1E1E1E">
                <DataGrid ItemsSource="{Binding Orders}" 
                          SelectedItem="{Binding SelectedOrder}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserResizeColumns="True"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="60"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding OrderDate, StringFormat='{}{0:dd MMM}'}" Width="90"/>
                        <DataGridTextColumn Header="Order Name" Binding="{Binding OrderName}" Width="1.5*"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="1.2*"/>
                        <DataGridTextColumn IsVisible="{Binding $parent[UserControl].((vm:OrderViewModel)DataContext).IsAdmin}" Header="Amount" Binding="{Binding OrderAmount, StringFormat='{}{0:C}'}" Width="100"/>
                        
                        <DataGridTemplateColumn Header="Status" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                            CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Delivered On" Binding="{Binding DeliveredDate, StringFormat='{}{0:dd MMM}'}" Width="100"/>
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu IsVisible="{Binding IsAdmin}">
                            <MenuItem Header="Delete Order" Command="{Binding $parent[UserControl].((vm:OrderViewModel)DataContext).DeleteCommand}" Foreground="Red" IsVisible="{Binding $parent[UserControl].((vm:OrderViewModel)DataContext).IsAdmin}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Border>
        </Grid>

        <!-- Right: Professional Editor Form -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10,0,20,20" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Padding="0">
            <DockPanel>
                <!-- Form Actions Bar -->
                <Border DockPanel.Dock="Bottom" Background="#263238" Padding="15">
                    <StackPanel Spacing="10">
                    <Button Command="{Binding SaveCommand}" 
                            Content="SAVE ORDER &amp; SPECS" 
                            Classes="accent" 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Center"
                            IsEnabled="{Binding IsClientActive}"
                            Height="40" FontWeight="Bold"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Stretch">
                         <Button Command="{Binding DownloadWorkOrderCommand}" 
                                Content="ðŸ“¥ WORK ORDER" 
                                IsVisible="{Binding IsEditing}"
                                Background="#D32F2F" 
                                Foreground="White"
                                HorizontalAlignment="Stretch" Width="195"
                                HorizontalContentAlignment="Center"/>

                        <Button Command="{Binding MarkDeliveredCommand}" 
                                Content="âœ“ DELIVERED" 
                                HorizontalAlignment="Stretch" Width="195"
                                HorizontalContentAlignment="Center"
                                IsVisible="{Binding IsEditing}"/>
                    </StackPanel>

                    <Button Command="{Binding ClearCommand}" 
                            Content="CANCEL / NEW" 
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsVisible="{Binding IsEditing}"/>
                    </StackPanel>
                </Border>

                <ScrollViewer Padding="20">
                    <StackPanel IsEnabled="{Binding IsFormEnabled}" Spacing="20">
                        <TextBlock Text="{Binding IsEditing, Converter={x:Static ObjectConverters.IsNotNull}, ConverterParameter='Edit Work Order', FallbackValue='New Work Order'}" 
                                   FontWeight="Bold" FontSize="20" Foreground="White" Margin="0,0,0,10"/>

                        <!-- Read Only Warning -->
                        <Border Background="#3E2723" BorderBrush="#D32F2F" BorderThickness="1" CornerRadius="4" Padding="10" IsVisible="{Binding !IsClientActive}">
                            <TextBlock Text="Inactive Client: Record is Read-Only" Foreground="#FFCDD2" TextWrapping="Wrap"/>
                        </Border>

                        <!-- Error Message -->
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#EF5350" TextWrapping="Wrap" IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                        <!-- Section: Client & General -->
                        <StackPanel Spacing="10">
                             <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Margin="0,0,0,10">
                                <TextBlock Text="CLIENT &amp; GENERAL" Foreground="#90CAF9" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            </Border>
                            
                            <StackPanel>
                                <TextBlock Text="Client *" Foreground="#B0BEC5" FontSize="11"/>
                                <ComboBox ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}" IsEnabled="{Binding !IsEditing}" HorizontalAlignment="Stretch">
                                    <ComboBox.ItemTemplate><DataTemplate><TextBlock Text="{Binding ClientName}"/></DataTemplate></ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Nomenclature (Item Name) *" Foreground="#B0BEC5" FontSize="11"/>
                                <TextBox Text="{Binding OrderName}" Watermark="e.g. Statue of Buddha"/>
                            </StackPanel>

                            <Grid ColumnDefinitions="*,*">
                            <StackPanel IsVisible="{Binding CanViewAmount}">
                                <TextBlock Text="Total Order Cost *" Foreground="#B0BEC5" FontSize="11"/>
                                <TextBox Text="{Binding OrderAmount}" IsEnabled="{Binding !IsEditing}" Watermark="0.00"/>
                            </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Booking Date" Foreground="#B0BEC5" FontSize="11"/>
                                    <DatePicker SelectedDate="{Binding OrderDate}" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Section: Specifications -->
                        <StackPanel Spacing="10">
                            <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Margin="0,10,0,10">
                                <TextBlock Text="TECHNICAL SPECIFICATIONS" Foreground="#FFCC80" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            </Border>

                            <Grid ColumnDefinitions="*,*,*">
                                <StackPanel Margin="0,0,5,0">
                                    <TextBlock Text="Size" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding Size}" Watermark="e.g. 6'"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="UOM" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding Uom}" Watermark="PC"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                    <TextBlock Text="Qty" Foreground="#B0BEC5" FontSize="11"/>
                                    <NumericUpDown Value="{Binding Quantity}" Minimum="1"/>
                                </StackPanel>
                            </Grid>

                            <Grid ColumnDefinitions="*,*,*">
                                <StackPanel Margin="0,0,5,0">
                                    <TextBlock Text="Material #" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding MaterialNo}" Watermark="300"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Costing Layer" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding CostingLayer}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                    <TextBlock Text="Colour" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding Color}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Reference Image Section -->
                            <StackPanel Spacing="10" Margin="0,10,0,0">
                                <TextBlock Text="REFERENCE IMAGE (Limit 2MB)" Foreground="#B0BEC5" FontSize="11" FontWeight="Bold"/>
                                <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="4" Height="150" Background="#121212">
                                    <Panel>
                                        <Image Source="{Binding ImagePreview}" Stretch="Uniform" Margin="5"/>
                                        <TextBlock Text="No Image Selected" 
                                                   IsVisible="{Binding ImagePreview, Converter={x:Static ObjectConverters.IsNull}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                   Foreground="#546E7A" FontSize="12"/>
                                    </Panel>
                                </Border>
                                <Button Command="{Binding SelectImageCommand}" Content="Select / Replace Image" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Section: Production Details -->
                        <StackPanel Spacing="10">
                            <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Margin="0,10,0,10">
                                <TextBlock Text="PRODUCTION &amp; MATERIAL" Foreground="#A5D6A7" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            </Border>

                            <StackPanel>
                                <TextBlock Text="Material Composition" Foreground="#B0BEC5" FontSize="11"/>
                                <TextBox Text="{Binding MaterialSpec}" AcceptsReturn="True" Height="50" TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Paint &amp; Polish" Foreground="#B0BEC5" FontSize="11"/>
                                <TextBox Text="{Binding PaintSpec}" AcceptsReturn="True" Height="50" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Margin="0,0,5,0">
                                    <TextBlock Text="Modelling Lst Date" Foreground="#B0BEC5" FontSize="11"/>
                                    <DatePicker SelectedDate="{Binding ModelingLastDate}" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Fiber Start Date" Foreground="#B0BEC5" FontSize="11"/>
                                    <DatePicker SelectedDate="{Binding FiberStartDate}" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Section: Assignment -->
                        <StackPanel Spacing="10" Margin="0,0,0,20">
                            <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Margin="0,10,0,10">
                                <TextBlock Text="ASSIGNMENT &amp; SIGN-OFF" Foreground="#CE93D8" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                            </Border>

                            <StackPanel>
                                <TextBlock Text="Order Booked By" Foreground="#B0BEC5" FontSize="11"/>
                                <TextBox Text="{Binding OrderBy}"/>
                            </StackPanel>

                            <Grid ColumnDefinitions="*,*">
                                <StackPanel Margin="0,0,5,0">
                                    <TextBlock Text="Modelling Person" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding ModelingBy}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Fiber Person" Foreground="#B0BEC5" FontSize="11"/>
                                    <TextBox Text="{Binding FiberBy}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
