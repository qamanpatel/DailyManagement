<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DailyManagementSystem.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
             x:Class="DailyManagementSystem.Views.LoginView"
             x:DataType="vm:LoginViewModel">

    <Grid Background="#121212">
        <Border Width="400" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Background="#1E1E1E" 
                Padding="40" 
                CornerRadius="15" 
                BoxShadow="0 10 30 0 #000000">
            <StackPanel Spacing="25">
                <!-- Branding -->
                <StackPanel Spacing="10" HorizontalAlignment="Center">
                    <TextBlock Text="RAM TIRATH ART" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Management System" 
                               FontSize="14" 
                               Foreground="#B0BEC5" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Separator Background="#333333" Margin="0,10"/>

                <!-- Login Form -->
                <StackPanel Spacing="20">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Username" Foreground="#90A4AE" FontSize="12" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Username}" 
                                 Watermark="Enter your username" 
                                 Padding="12"
                                 Background="#263238" 
                                 BorderThickness="0"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Password" Foreground="#90A4AE" FontSize="12" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Password}" 
                                 PasswordChar="*" 
                                 Watermark="Enter your password" 
                                 Padding="12"
                                 Background="#263238" 
                                 BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#EF5350" 
                           FontSize="12" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <!-- Login Button -->
                <Button Command="{Binding LoginCommand}" 
                        Content="LOG IN" 
                        Background="#2196F3" 
                        Foreground="White" 
                        Padding="15" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center" 
                        FontWeight="Bold" 
                        IsEnabled="{Binding !IsBusy}">
                    <Button.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                        </Transitions>
                    </Button.Transitions>
                </Button>

                <!-- Footer -->
                <TextBlock Text="Â© 2026 Ram Tirath Art. All rights reserved." 
                           FontSize="10" 
                           Foreground="#546E7A" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
