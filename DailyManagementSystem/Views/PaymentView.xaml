<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DailyManagementSystem.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
             x:Class="DailyManagementSystem.Views.PaymentView"
             x:DataType="vm:PaymentViewModel">

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,350">

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnDefinitions="Auto,*,Auto" Margin="20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Command="{Binding BackCommand}" Content="â† Back" />
                <TextBlock Text="Payment Management" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                <Border Background="#37474F" Padding="10,5" CornerRadius="5" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Role:" Foreground="#B0BEC5" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="Admin" IsVisible="{Binding IsAdmin}" FontWeight="SemiBold" Foreground="#90CAF9" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="User" IsVisible="{Binding !IsAdmin}" FontWeight="SemiBold" Foreground="#81C784" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Left: Payment History & Balances -->
        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,*" Margin="20,0,10,20">
            
            <!-- Balance Info Cards -->
            <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,15">
                <Border Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total Orders" Foreground="#90CAF9" FontSize="12"/>
                        <TextBlock Text="{Binding TotalOrderAmount, StringFormat={}{0:C}}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total Paid" Foreground="#A5D6A7" FontSize="12"/>
                        <TextBlock Text="{Binding TotalPaidAmount, StringFormat={}{0:C}}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Pending Balance" Foreground="#EF9A9A" FontSize="12"/>
                        <TextBlock Text="{Binding PendingAmount, StringFormat={}{0:C}}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- DataGrid -->
            <Border Grid.Row="1" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Background="#1E1E1E">
                <DataGrid ItemsSource="{Binding Payments}" 
                          SelectedItem="{Binding SelectedPaymentDto}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserResizeColumns="True"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat='{}{0:dd MMM yyyy}'}" Width="120"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding ClientName}" Width="1.5*"/>
                        <DataGridTextColumn Header="Bank" Binding="{Binding BankName}" Width="120"/>
                        <DataGridTextColumn Header="Order" Binding="{Binding OrderName}" Width="1.5*"/>
                        <DataGridTextColumn IsVisible="{Binding $parent[UserControl].((vm:PaymentViewModel)DataContext).IsAdmin}" Header="Amount" Binding="{Binding AmountReceived, StringFormat='{}{0:C}'}" Width="120"/>
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu IsVisible="{Binding IsAdmin}">
                            <MenuItem Header="Delete Payment" Command="{Binding $parent[UserControl].((vm:PaymentViewModel)DataContext).DeleteCommand}" Foreground="Red" IsVisible="{Binding $parent[UserControl].((vm:PaymentViewModel)DataContext).IsAdmin}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Border>
        </Grid>

        <!-- Right: Payment Form -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10,0,20,20" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel Spacing="15" IsEnabled="{Binding IsFormEnabled}">
                    <TextBlock IsVisible="{Binding !IsEditing}" Text="New Payment" FontWeight="Bold" FontSize="18" Foreground="White"/>
                    <TextBlock IsVisible="{Binding IsEditing}" Text="Edit Payment" FontWeight="Bold" FontSize="18" Foreground="White"/>
    
                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
    
                    <StackPanel>
                        <TextBlock Text="Client Name" FontWeight="SemiBold" Foreground="#B0BEC5"/>
                        <ComboBox ItemsSource="{Binding Clients}" 
                                  SelectedItem="{Binding SelectedClient}"
                                  IsEnabled="{Binding !IsEditing}"
                                  PlaceholderText="Select Client"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ClientName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
    
                    <StackPanel>
                        <TextBlock Text="Order Name" FontWeight="SemiBold" Foreground="#B0BEC5"/>
                        <ComboBox ItemsSource="{Binding ClientOrders}" 
                                  SelectedItem="{Binding SelectedOrder}"
                                  IsEnabled="{Binding !IsEditing}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="#"/>
                                        <TextBlock Text="{Binding OrderId}"/>
                                        <TextBlock Text=" - "/>
                                        <TextBlock Text="{Binding OrderName}"/>
                                        <!-- Hide amounts here too? User said amount related details. Let's hide them. -->
                                        <TextBlock Text=" - " Foreground="#B0BEC5" IsVisible="{Binding $parent[UserControl].((vm:PaymentViewModel)DataContext).CanViewAmount}"/>
                                        <TextBlock Text="{Binding OrderAmount, StringFormat={}{0:C}}" IsVisible="{Binding $parent[UserControl].((vm:PaymentViewModel)DataContext).CanViewAmount}" Foreground="#90CAF9" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
    
                    <!-- Order Balance Info (Conditional) -->
                    <Border Background="#263238" CornerRadius="4" Padding="10" IsVisible="{Binding CanViewAmount}">
                        <StackPanel IsVisible="{Binding SelectedOrder, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <TextBlock Text="Remaining for Order:" Foreground="#B0BEC5" FontSize="12"/>
                            <TextBlock Text="{Binding OrderRemainingAmount, StringFormat={}{0:C}}" Foreground="#90CAF9" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
    
                    <StackPanel IsVisible="{Binding CanViewAmount}">
                        <TextBlock Text="Amount Received *" FontWeight="SemiBold" Foreground="#B0BEC5"/>
                        <TextBox Text="{Binding PaymentAmount}" Watermark="0.00"/>
                    </StackPanel>

                <StackPanel>
                    <TextBlock Text="Bank Name" FontWeight="SemiBold" Foreground="#B0BEC5"/>
                    <TextBox Text="{Binding BankName}" Watermark="e.g. SBI, HDFC, Cash"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Payment Date *" FontWeight="SemiBold" Foreground="#B0BEC5"/>
                    <DatePicker SelectedDate="{Binding PaymentDate}" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <Separator Margin="0,10" Background="#333333"/>

                <StackPanel Orientation="Vertical" Spacing="10">
                    <Button Command="{Binding SaveCommand}" 
                            Content="Save Payment" 
                            Classes="accent" 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Center"/>
                    
                    <Button Command="{Binding DeleteCommand}" 
                            Content="Delete Payment" 
                            Foreground="Red"
                            IsVisible="{Binding IsAdmin}"
                            IsEnabled="{Binding IsEditing}"
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Center"/>

                    <Button Command="{Binding ClearCommand}" 
                            Content="Cancel" 
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"/>
                    
                    <Button Command="{Binding RefreshCommand}" 
                            Content="Refresh List" 
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
